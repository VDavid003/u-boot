/dts-v1/;
#include "exynos7885.dtsi"
#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/input/input.h>
#include <dt-bindings/interrupt-controller/irq.h>

/ {
	model = "Samsung Galaxy XCover 4s";
	compatible = "samsung,xcover4s", "samsung,exynos7885";
	chassis-type = "handset";

	aliases {
		mmc0 = &mmc_0;
		serial0 = &serial_0;
		serial1 = &serial_1;
		serial2 = &serial_2;
	};

	chosen {
		#address-cells = <2>;
		#size-cells = <1>;
		stdout-path = &serial_2;

		framebuffer@ec000000 {
			compatible = "simple-framebuffer";
			reg = <0x0 0xec000000 0x00384000>;
			width = <720>;
			height = <1280>;
			stride = <2880>;
			format = "a8r8g8b8";
		};
	};

	reserved-memory {
		#address-cells = <2>;
		#size-cells = <1>;
		ranges;

		framebuffer_region@ec000000 {
			reg = <0x0 0xec000000 0x00384000>;
			no-map;
		};
	};
	memory@80000000 {
		device_type = "memory";
		reg = <0x0 0x80000000 0x3d500000>,
		      <0x0 0xc0000000 0x40000000>,
		      <0x8 0x80000000 0x40000000>;
	};

	gpio-keys {
		compatible = "gpio-keys";
		pinctrl-names = "default";
		pinctrl-0 = <&key_home &key_recent &key_back &key_xcover
		             &key_volup &key_voldown &key_power>;

		home-key {
			label = "Home";
			linux,code = <KEY_HOME>;
			gpios = <&gpa0 1 GPIO_ACTIVE_LOW>;
		};

		recents-key {
			label = "Recents";
			linux,code = <KEY_APPSELECT>;
			gpios = <&gpa0 2 GPIO_ACTIVE_LOW>;
		};

		back-key {
			label = "Back";
			linux,code = <KEY_BACK>;
			gpios = <&gpa0 5 GPIO_ACTIVE_LOW>;
		};

		/* TODO: What key is this? */
		/*
		xcover-key {
			label = "XCover";
			linux,code = <???>;
			gpios = <&gpa1 3 GPIO_ACTIVE_LOW>;
		};*/

		volup-key {
			label = "Volume Up";
			linux,code = <KEY_VOLUMEUP>;
			gpios = <&gpa1 5 GPIO_ACTIVE_LOW>;
		};

		voldown-key {
			label = "Volume Down";
			linux,code = <KEY_VOLUMEDOWN>;
			gpios = <&gpa1 6 GPIO_ACTIVE_LOW>;
		};

		power-key {
			label = "Power";
			linux,code = <KEY_POWER>;
			gpios = <&gpa1 7 GPIO_ACTIVE_LOW>;
			wakeup-source;
		};
	};
};

&oscclk {
	clock-frequency = <26000000>;
};

&pinctrl_alive {
	key_home: key-home-pins {
		samsung,pins = "gpa0-1";
		samsung,pin-function = <EXYNOS_PIN_FUNC_F>;
		samsung,pin-pud = <EXYNOS_PIN_PULL_NONE>;
		samsung,pin-drv = <EXYNOS5420_PIN_DRV_LV1>;
	};

	key_recent: key-home-pins {
		samsung,pins = "gpa0-2";
		samsung,pin-function = <EXYNOS_PIN_FUNC_F>;
		samsung,pin-pud = <EXYNOS_PIN_PULL_NONE>;
		samsung,pin-drv = <EXYNOS5420_PIN_DRV_LV1>;
	};

	key_back: key-home-pins {
		samsung,pins = "gpa0-5";
		samsung,pin-function = <EXYNOS_PIN_FUNC_F>;
		samsung,pin-pud = <EXYNOS_PIN_PULL_NONE>;
		samsung,pin-drv = <EXYNOS5420_PIN_DRV_LV1>;
	};

	key_xcover: key-home-pins {
		samsung,pins = "gpa1-3";
		samsung,pin-function = <EXYNOS_PIN_FUNC_F>;
		samsung,pin-pud = <EXYNOS_PIN_PULL_NONE>;
		samsung,pin-drv = <EXYNOS5420_PIN_DRV_LV1>;
	};

	key_volup: key-volup-pins {
		samsung,pins = "gpa1-5";
		samsung,pin-function = <EXYNOS_PIN_FUNC_F>;
		samsung,pin-pud = <EXYNOS_PIN_PULL_NONE>;
		samsung,pin-drv = <EXYNOS5420_PIN_DRV_LV1>;
	};

	key_voldown: key-voldown-pins {
		samsung,pins = "gpa1-6";
		samsung,pin-function = <EXYNOS_PIN_FUNC_F>;
		samsung,pin-pud = <EXYNOS_PIN_PULL_NONE>;
		samsung,pin-drv = <EXYNOS5420_PIN_DRV_LV1>;
	};

	key_power: key-power-pins {
		samsung,pins = "gpa1-7";
		samsung,pin-function = <EXYNOS_PIN_FUNC_F>;
		samsung,pin-pud = <EXYNOS_PIN_PULL_NONE>;
		samsung,pin-drv = <EXYNOS5420_PIN_DRV_LV1>;
	};
};

&serial_2 {
	status = "okay";
};
