/dts-v1/;
#include "exynos7885.dtsi"
/ {
	compatible = "samsung,exynos7885";

	aliases {
		console = &uart2;
	};

	chosen {
		#address-cells = <2>;
		#size-cells = <1>;
		ranges;

		stdout-path = &uart2;

		framebuffer@ec000000 {
			compatible = "simple-framebuffer";
			reg = <0x0 0xec000000 0x00925680>;
			width = <1080>;
			height = <2220>;
			stride = <4320>;
			format = "a8r8g8b8";
			u-boot,dm-pre-reloc;
		};
	};

	reserved-memory {
		#address-cells = <2>;
		#size-cells = <1>;
		ranges;

		framebuffer_region@ec000000 {
			reg = <0x0 0xec000000 0x00925680>;
			no-map;
		};
	};

	memory@80000000 {
		device_type = "memory";
		reg = <0x0 0x80000000 0x3da00000>;
	};

	memory@c0000000 {
		device_type = "memory";
		reg = <0x0 0xc0000000 0x40000000>;
	};

	memory@880000000 {
		device_type = "memory";
		reg = <0x8 0x80000000 0x80000000>;
	};

};

&i2c_1 {
	status = "okay";
	u-boot,dm-pre-reloc;
};
